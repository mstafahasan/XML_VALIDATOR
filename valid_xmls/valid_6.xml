<?xml version="1.0" encoding="UTF-8"?>
<AR-PACKAGE>
  <ELEMENTS>
    <SENDER-RECEIVER-INTERFACE>
      <SHORT-NAME name="SensorData_IF"/>
      <DATA-ELEMENTS>
        <VARIABLE-DATA-PROTOTYPE>
          <SHORT-NAME name="SensorValue"/>
          <TYPE-TREF>
            <Array-of-uint8 No_Of_Bytes="8">
              <Random-Values-generated>
                <Data-Range min="0" max="255"/>
              </Random-Values-generated>
            </Array-of-uint8>
          </TYPE-TREF>
        </VARIABLE-DATA-PROTOTYPE>
      </DATA-ELEMENTS>
    </SENDER-RECEIVER-INTERFACE>
    <PRE-BUILT-APPLICATION>
      <SHORT-NAME name="App_ADAS"/>
      <PATH DEST="bin/adas_app.bin"/>
    </PRE-BUILT-APPLICATION>
    <Network-Topology>
      <InterECU_communication>
        <CAN-BUS>
          <SHORT-NAME name="CAN0"/>
          <BaudRate value="500000"/>
          <INTERFACE-TREF DEST="/SensorData_IF"/>
        </CAN-BUS>
        <Eth-Switch>
          <SHORT-NAME name="Switch0"/>
          <INTERFACE-TREF DEST="/SensorData_IF"/>
        </Eth-Switch>
      </InterECU_communication>
    </Network-Topology>
    <ECUs>
      <SHORT-NAME name="ECUs_Gateway"/>
      <SoCs>
        <SHORT-NAME name="SoC_GW_0"/>
        <AXI-BUS width="8" frequency="200000000"/>
        <ETHERNET-INTERFACE Mode="simulated"/>
        <UCIe-INTERFACE Mode="host">
          <D2D_Configuration DestChipletRef="/ECUs_Gateway/SoC_GW_0">
            <LINK_WIDTH value="256"/>
            <LINK_FREQUENCY value="250000000"/>
            <PROTOCOL_CONV_LATENCY value="5" unit="ns"/>
            <CHIPLET_LINK_LATENCY value="10" unit="ns"/>
            <LOGICAL_IF_DELAY value="6" unit="ns"/>
            <PHYSICAL_IF_DELAY value="5" unit="ns"/>
          </D2D_Configuration>
        </UCIe-INTERFACE>
        <Generic_Hardware>
          <SHORT-NAME name="HW_Block1"/>
          <Frequency value="1000000"/>
          <AXI-Master-Port priority="10"/>
          <MEMORY-INTERFACE InternalMemory="true"/>
          <INTERNAL-BEHAVIOR>
            <PORTS>
              <P-PORT-PROTOTYPE>
                <SHORT-NAME name="PPort1"/>
                <PROVIDED-INTERFACE-TREF DEST="/SensorData_IF"/>
              </P-PORT-PROTOTYPE>
            </PORTS>
            <OPERATIONS-SEQUENCE>
              <OPERATION>
                <WRITE>
                  <IREF DEST="/genericHardware-name/pPort-name"/>
                </WRITE>
              </OPERATION>
            </OPERATIONS-SEQUENCE>
            <EVENT>
              <TIMING-EVENT>
                <PERIOD value="20" unit="ms"/>
              </TIMING-EVENT>
            </EVENT>
          </INTERNAL-BEHAVIOR>
        </Generic_Hardware>
      </SoCs>
    </ECUs>
    <Analysis>
      <SW-Analysis-Enable>
        <ALL-SoCs>Enabled</ALL-SoCs>
      </SW-Analysis-Enable>
      <HW-Analysis-Enable>
        <ALL-SoCs>Enabled</ALL-SoCs>
      </HW-Analysis-Enable>
    </Analysis>
  </ELEMENTS>
</AR-PACKAGE>